

<!-- bootstrap  style: -->
<div class="card">
  <div class="card-header">
    <%= post.title %> 
  </div>
  <div class="card-body">
    <h5 class="card-title"> <%= post.user.try(:email) %> </h5>
    <p class="card-text">  <%= post.body %>  </p>
    
    <%= link_to "Show this post", post, class: "btn btn-primary" unless @post %>

  </div>
</div>